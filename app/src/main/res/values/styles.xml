<resources>

    <!-- Base application theme. -->
    <style name="CountdownTheme.Orange" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>

    </style>

    <style name="DefaultNumberPickerTheme" parent="CountdownTheme.Orange">
        <item name="colorControlNormal">@color/primaryColor</item>
    </style>



    <style name="Countdown.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


</resources>
